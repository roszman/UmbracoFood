@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var home = CurrentPage.Site();
    var test = home.IsEqual(1052);
    var test2 = test;
}




@if (home.Children.Any())
{
    <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <li style="@(home.IsEqual(CurrentPage) ? "font-size: large" : null)">
                <a href="@home.Url">@home.Name</a>
            </li>
            @*@foreach (var childPage in home.Children.Where("DocumentTypeAlias != \"AddRestaurationPage\""))*@
            @foreach (var childPage in home.Children.Where("visibleInMainNavigation == true"))
            {
                <li style="@(childPage.IsAncestorOrSelf(CurrentPage) ? "font-size: large" : null)">
                    <a href="@childPage.Url">@childPage.Name</a>
                </li>
            }

        </ul>
    </div>
}
