@using UmbracoFood.Controllers.Surface
@{
    Layout = "Master.cshtml";
}
<div class="container">
            @using(Html.BeginUmbracoForm("Index", "AccountSurface", new {@class = "form-signin"}))
            {
                @Html.AntiForgeryToken()
                <h4>Use a local account to log in.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.Label("UserName", new { @class = "sr-only" })
                @Html.TextBox("UserName", null, new { @class = "form-control" })
                @Html.Label("Password", null, new { @class = "sr-only" })
                @Html.Password("Password", null, new { @class = "form-control" })
                <div class="checkbox">
                    @Html.CheckBox("RememberMe")
                    @Html.Label("RememberMe")
                </div>
                <button type="submit" value="Log in" class="btn btn-lg btn-primary btn-block" />
            }
</div>