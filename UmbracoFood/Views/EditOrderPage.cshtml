@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<div class="container">
    <h2>Utworz zamowienie</h2>
    <form class="form-horizontal">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Moj nick</label>
            <div class="col-sm-10">
                <input type="" class="form-control" id="inputEmail3" placeholder="Moj nick">
            </div>
        </div>
        <div class="form-group form-inline">
            <label for="inputEmail3" class="col-sm-2 control-label">Wybierz restauracje</label>
            <div class="col-sm-10">
                <select class="form-control">
                    <option>Wybierz restauracje...</option>
                    <option>Alizze</option>
                    <option>Surf</option>
                    <option>Panorama</option>
                </select>
                <a href="DodajRestauracje.html" type="button" class="btn btn-default">Dodaj nowa</a>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Do ktorej</label>
            <div class="col-sm-10">
                <input type="" class="form-control" id="inputPassword3" placeholder="Do ktorej godziny zbieram zamowienia?">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label class="checkbox-inline">
                        <input type="checkbox" id="inlineCheckbox1" value="option1">Platnosc gotowka
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" id="inlineCheckbox2" value="option2">Platnosc karta
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Numer konta</label>
            <div class="col-sm-10">
                <input type="" class="form-control" id="inputPassword3" placeholder="Numer konta">
            </div>
        </div>
        <div class="form-gorup">
            <label class="col-sm-2 control-label">Dodaj danie</label>
            <table class="col-sm-10">
                <thead>
                    <tr>
                        <th>Nazwa dania</th>
                        <th>Kwota</th>
                        <th>Ilosc</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="text" /></td>
                        <td><input type="text" /></td>
                        <td><input type="text" /></td>
                        <td>
                            <button type="button" class="btn btn-success ">
                                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Podsumowanie</label>
            <div class="col-sm-10">
                <h3>12,56 PLN</h3>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a href="Zamowienie.html" type="submit" class="btn btn-default">Publikuj</a>
            </div>
        </div>
    </form>
</div>
<!-- /.container -->