@using System.Web.Optimization
@using Umbraco.Web
@using UmbracoFood.Controllers.Surface
@model int
@{
    Layout = null;
}

<form ng-controller="EditRestaurantController" 
      ng-submit="editRestaurant(restaurant)" 
      ng-init="init('@Model')"
      class="form-horizontal">
    
    <input type="hidden" id="Id" ng-model="restaurant.Id"/>

    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Nazwa</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Name" placeholder="Nazwa" ng-model="restaurant.Name">
        </div>
    </div>
    <div class="form-group">
        <label for="Phone" class="col-sm-2 control-label">Telefon</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Phone" placeholder="Telefon" ng-model="restaurant.Phone">
        </div>
    </div>
    <div class="form-group">
        <label for="WebsiteUrl" class="col-sm-2 control-label">Strona internetowa</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="WebsiteUrl" placeholder="Url" ng-model="restaurant.WebsiteUrl">
        </div>
    </div>
    <div class="form-group">
        <label for="MenuUrl" class="col-sm-2 control-label">Adres menu</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="MenuUrl" placeholder="Url" ng-model="restaurant.MenuUrl">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Edytuj restauracje</button>
        </div>
    </div>
</form>


@Scripts.Render("~/Scripts/EditRestaurant")
